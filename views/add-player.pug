extends layout

block content
  h1= title
  div(class='card' style='width:30rem;')
    div(class='card-body')
      form(method='post', action='/admin/players/add-player')
        .form-group
          label(for='teamName') Team Name
          select(class='form-control' id='teamName' name='teamName')
            each team in teams
              option(value=team.id)=team.name
        .form-group
          label(for='imageUrl') Image
          input#imageUrl.form-control(type='text' placeholder='Image URI', name="imageUrl")
        .form-group
          label(for='playerName') Name
          input#playerName.form-control(type='text' placeholder='Name', name="playerName")
        .form-group
          label(for='dob') Date Of Birth
          input#dob.form-control(type='text' placeholder='01/01/1970', name="dob")
        .form-group
          label(for='location') Location
          input#location.form-control(type='text' placeholder='Location', name="location")
        .form-group
          label(for='injury') Injury
          input#injury.form-control(type='text' placeholder='Healthy', name="injury" value="Healthy")
        button.btn.btn-primary(type='submit') Create