extends layout

block content
  h1= title
  div(class="row")
    each player in players
     div(class="col-sm-3")
      div(class='card')
        img(class="card-img-top" src=player.imgURL alt="Img Unavailable")
        div(class='card-body')
          h5=player.name
          table(class='table')
            tr
              td(scope='col')="DOB (Year)"
              td(scope='col')=player.dob
            tr
              td(scope='col')="Location"
              td(scope='col')=player.location